# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT Secret for auth tokens
JWT_SECRET=your-random-secret-key-here

# Profile Configuration (for multiple accounts)
# Set this to use a specific profile instead of env credentials
# OTTER_PROFILE=restaurant1

# Single Account Configuration (fallback if no profile set)
# Required: Your Otter login credentials (same as used in final_master_otter_automation.py)
OTTER_USERNAME=your_email@example.com
OTTER_PASSWORD=your_password

# Optional: Override default Otter API URL
# OTTER_BASE_URL=https://api.tryotter.com

# Database Configuration (optional)
# If provided, menu data will be stored in database
# Example: postgresql://user:password@localhost/dbname
# DATABASE_URL=

# Menu Sync Specific Configuration
# How often to sync menu data (in minutes)
MENU_SYNC_INTERVAL_MINUTES=30

# Enable/disable automatic sync
MENU_SYNC_ENABLED=true

# Sync all profiles in scheduled mode
MENU_SYNC_ALL_PROFILES=false

# Run in dry-run mode (no actual changes)
MENU_SYNC_DRY_RUN=false

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Log file path (creates directory if needed)
# LOG_FILE=logs/menu_sync.log