{
  "manifest_version": 3,
  "name": "Otter Order Consolidator v3",
  "version": "3.0.0",
  "description": "Consolidate orders with automatic size detection via network interception",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.tryotter.com/*",
    "https://*.tryotter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.tryotter.com/*"],
      "js": [
        "utils/storage.js",
        "utils/logger.js",
        "utils/htmlEscape.js",
        "utils/categoryCache.js",
        "components/itemMatcher.js",
        "components/orderBatcher.js",
        "components/categoryManager.js",
        "components/batchManager.js",
        "content/networkMonitor.js",
        "content/orderCache.js",
        "content/reactDataExtractor.js",
        "content/orderExtractor.js",
        "content/overlay.js",
        "content/debugHelper.js",
        "content/content.js"
      ],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/pageContextExtractor.js"],
      "matches": ["https://app.tryotter.com/*"]
    }
  ]
}