{
  "manifest_version": 3,
  "name": "Otter Order Consolidator",
  "version": "1.0.1",
  "description": "Consolidate live orders on app.tryotter.com with item batching and category organization",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.tryotter.com/*",
    "https://*.tryotter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.tryotter.com/*"],
      "js": [
        "utils/storage.js",
        "components/itemMatcher.js",
        "components/orderBatcher.js",
        "components/categoryManager.js",
        "components/batchManager.js",
        "content/networkMonitor.js",
        "content/orderCache.js",
        "content/orderExtractor.js",
        "content/overlay.js",
        "content/debugHelper.js",
        "content/content.js"
      ],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}