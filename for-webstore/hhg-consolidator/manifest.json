{
  "manifest_version": 3,
  "name": "HHG Consolidator",
  "version": "1.0.0",
  "description": "Consolidate multiple orders into batches and print labels efficiently",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://app.tryotter.com/*",
    "https://*.tryotter.com/*",
    "http://localhost:8000/*",
    "ws://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.tryotter.com/*"],
      "js": [
        "utils/storage.js",
        "utils/logger.js",
        "utils/htmlEscape.js",
        "utils/categoryCache.js",
        "utils/apiClient.js",
        "components/itemMatcher.js",
        "components/orderBatcher.js",
        "components/categoryManager.js",
        "components/batchManager.js",
        "components/labelDataTransformer.js",
        "components/batchLabelPrinter.js",
        "components/prepTimeTracker.js",
        "content/networkMonitor.js",
        "content/orderCache.js",
        "content/reactDataExtractor.js",
        "content/orderExtractor.js",
        "content/authUI.js",
        "content/overlay.js",
        "content/labelPreviewModal.js",
        "content/debugHelper.js",
        "content/content.js"
      ],
      "css": ["styles/overlay.css", "label_styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content/pageContextExtractor.js",
        "label_printer.html",
        "label_printer.js",
        "label_styles.css",
        "images/*"
      ],
      "matches": ["https://app.tryotter.com/*", "<all_urls>"]
    }
  ],
  "action": {
    "default_title": "HHG Consolidator"
  }
}